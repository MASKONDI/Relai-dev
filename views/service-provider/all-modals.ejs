
<!-- The Modal -->
<div class="modal permission-modal fade " id="MyComplaintModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <form name="complaintform" id="mycomplent_form" method="POST" action="" enctype="multipart/form-data">
        <!-- Modal Header -->
        <div class="modal-header text-center">
          <h2 class="modal-title w-100">Raise a Complaint</h2>
        </div>

        <!-- Modal body -->
        <div class="modal-body">
          <span class="complaint_msg"></span>
          <select class="form-control selectBox " style="height:55px;" id="coms_complaint_help"
            name="coms_complaint_help" data-rule-required="true" data-msg-required="I need help with is required!">
            <option value="">I need help with*</option>
            <option value="Report a bug">Report a bug</option>
            <option value="Property Related Enquiry">Property Related Enquiry</option>
          </select>

          <select data-rule-required="true" data-msg-required="Property is required!" class="form-control selectBox"
            style="height:55px;display:none" id="property_id" name="property_id">
            <option value="">Select Property</option>
          </select>

          <select data-rule-required="true" data-msg-required="Professional is required!" class="form-control selectBox"
            style="height:55px;display:none" id="coms_complaint_for" name="coms_complaint_for">
            <option value="">Select Professional</option>
          </select>

          <input type="hidden" name="cust_user_id" id="cust_user_id" value="<%= session.user_id %>">
          <input type="text" class="form-control  form-control-fix2" id="coms_complaint_subject" placeholder="Subject"
            name="coms_complaint_subject" data-rule-required="true" data-msg-required="Subject is required!">
          <textarea class="form-control  form-control-fix2" rows="3" name="coms_complaint_note" id="coms_complaint_note"
            placeholder="Tell Us More"></textarea>
          <a href="#" class="upload-any float-right"><i class="fa fa-paperclip float-right" style="color:black"><span
                class="clip-icon">Attach
                files</span></i>
            <div class="custom-file-input">
              <input onchange="complaint_previewFile1(this);" type="file" id="image" name="complaint_file" value="">
              <input type="button">
            </div>
            <div class="comp_uploaded_img">
              <img id="uploaded_img" /><br />
              <span class="imgcompaint_name"></span>
            </div>
          </a>
        </div>

        <div class="modal-footer" style="display: flex">
          <button type="button" class="btn btn-cancel" data-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-cancel complain_submit_btn" name="submit">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>